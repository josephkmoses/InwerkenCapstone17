<mvc:View
	controllerName="gatewayapplicationGatewayApplication.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m">
	<SplitApp>
		<detailPages>
			<Page id="detailsPage" title="Sensor Name" >
				<content>
					<ObjectHeader title="Sensor Name">
						<attributes>
							<ObjectAttribute title="ID" text="" />
							<ObjectAttribute title="Lasted Updated" text="" />
							<ObjectAttribute title="Current Temperature" text="" />
							<ObjectAttribute title="Current Brightness" text="" />
						</attributes>
						<statuses>
							<ObjectStatus title="Status" text="Nothing's wrong... yet" state="Success" />
						</statuses>
					</ObjectHeader>
					<IconTabBar>
					
					</IconTabBar>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page showHeader="false">
				<subHeader>
					<Toolbar>
						<SearchField
							liveChange="onSearch"
							width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<List
						id="idList"
						items="{/Sensors}"
						selectionChange="onSelectionChange"
						mode="MultiSelect"
						includeItemInSelection="true" >
						<infoToolbar>
							<Toolbar
								visible="false"
								id="idInfoToolbar" >
								<Label id="idFilterLabel" />
							</Toolbar>
						</infoToolbar>
						<items>
						<StandardListItem
							title="{id}"
							description="{ProductId}"
							icon="{ProductPicUrl}"
							iconDensityAware="false"
							iconInset="false" />
						</items>
					</List>
				</content>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>