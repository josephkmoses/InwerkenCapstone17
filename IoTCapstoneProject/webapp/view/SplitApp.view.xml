<mvc:View controllerName="gatewayapplicationIoTCapstoneProject.controller.SplitApp" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page id="detail" title="Sensor Name" class="sapUiStdPage">
				<headerContent>
					<HBox>
				<Switch type="AcceptReject" state="true" change="onSwitchChange">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
			</HBox>
				</headerContent>
				<content>
					<ObjectHeader
						title="SensorName">
						<statuses>
							<ObjectStatus
								text="Nothing's Wrong"
								state="Success" />
						</statuses>
						<attributes>
							<ObjectAttribute text="ID: " />
							<ObjectAttribute text="Last Updated: " />
							<ObjectAttribute text="Current Temperature: " />
							<ObjectAttribute text="Current Brightness: " />
						</attributes>
					</ObjectHeader>
					<IconTabBar expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter text="Table">
								<Table id="idSensorTable"
									inset="false"
									items="{
										path: '/SensortCollection',
											sorter: {
											path: 'Name'
										}
								}">

								<columns>
									<Column
										width="12em">
										<Text text="Timestamp" />
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Brightness (Lux)" />
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Temperature (Celsius)" />
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectIdentifier
												title="{Name}"
												text="{ProductId}"/>
											<Text
												text="{SupplierName}" />
											<Text
												text="{Width} x {Depth} x {Height} {DimUnit}" />
											<ObjectNumber
												number="{WeightMeasure}"
												unit="{WeightUnit}"
												state="{
													path: 'WeightMeasure',
													formatter: 'sap.m.sample.Table.Formatter.weightState'
												}" />
											<ObjectNumber
													number="{
														parts:[{path:'Price'},{path:'CurrencyCode'}],
														type: 'sap.ui.model.type.Currency',
														formatOptions: {showMeasure: false}
													}"
													unit="{CurrencyCode}" />
										</cells>
									</ColumnListItem>
									</items>
									</Table>
									</IconTabFilter>
									<IconTabFilter text="Chart">
			
									</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="master" class="sapUiStdPage">
				<customHeader>
					<Toolbar>
						<SearchField liveChange="onSearch" width="100%" />
					</Toolbar>
				</customHeader>
				<content>
					<List id="sensorList" items="{ path: '/ProductCollection' }" >
						<StandardListItem title="{Name}" counter="{Quantity}"/>
					</List>
				</content>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>