<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="gatewayapplicationIoTCapstoneProject.controller.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="detail" title="{i18n>sensorName}" class="sapUiStdPage">
				<headerContent>
				<HBox>
					<Switch type="AcceptReject" state="true" change="onSwitchPress">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</HBox>
				</headerContent>
				<content>
					<ObjectHeader
						title="{i18n>sensorName}">
						<statuses>
							<ObjectStatus
								text="Nothing's Wrong"
								state="Success" />
						</statuses>
						<attributes items="{path: 'devices>/devices'}">
							<ObjectAttribute text="ID: {parts:['i18n>sensorName', 'device>/name'], formatter: 'jQuery.sap.formatMessage'}" />
							<ObjectAttribute text="Last Updated: {i18n>lastUpdate}" />
							<ObjectAttribute text="Current Temperature: {i18n>currentTemperature}" />
							<ObjectAttribute text="Current Humidity: {i18n>currentHumidity}" />
							<ObjectAttribute text="Current Brightness: {i18n>currentBrightness}" />
						</attributes>
					</ObjectHeader>
					<IconTabBar expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter text="Table">
								<Table id="idSensorTable"
									inset="false"
									items="{
										path: '/sensor/name',
											sorter: {
											path: 'Name'
										}
								}">

								<columns>
									<Column
										width="12em">
										<Text text="Timestamp" />
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Temperature (Celsius)" />
									</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Humidity" />
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Brightness (Lux)" />
									</Column>
								</columns>
								
								<items>
									<ColumnListItem>
										<cells>
											<ObjectIdentifier text="Date Here"/>
											<Text text="Temperature Here" />
											<Text text="Humidity here" />
											<Text text="Brightness Here" />
										</cells>
									</ColumnListItem>
								</items>
								</Table>
								</IconTabFilter>
								<IconTabFilter text="Chart">
								</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>